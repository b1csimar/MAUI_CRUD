<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui_Doga.MainPage"
             Title="Tanulók Adatbázis">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            
            <Label Text="Tanulók Doga" 
                   FontSize="24" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <Frame BorderColor="Gray" Padding="10" Margin="0,10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Tanulók adatai" FontSize="18" FontAttributes="Bold"/>
                    
                    <Entry x:Name="NameEntry" Placeholder="Név"/>
                    <Picker x:Name="GenderPicker" Title="Nem">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Férfi</x:String>
                                <x:String>Nő</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>
                    <Entry x:Name="HeightEntry" Placeholder="Magasság (cm)" Keyboard="Numeric"/>
                    <Entry x:Name="WeightEntry" Placeholder="Testsúly (kg)" Keyboard="Numeric"/>
                    <Entry x:Name="ClassEntry" Placeholder="Osztály"/>
                    
                    <Grid ColumnDefinitions="*,*,*" ColumnSpacing="10">
                        <Button Text="Hozzáadás" Clicked="OnAddClicked" Grid.Column="0"/>
                        <Button Text="Módosítás" Clicked="OnUpdateClicked" Grid.Column="1"/>
                        <Button Text="Törlés" Clicked="OnDeleteClicked" Grid.Column="2" BackgroundColor="Red"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <Frame BorderColor="Gray" Padding="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Tanulók kilistázva" FontSize="18" FontAttributes="Bold"/>
                    <CollectionView x:Name="StudentsCollectionView" 
                                    HeightRequest="300"
                                    SelectionMode="Single"
                                    SelectionChanged="OnStudentSelected">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Margin="5" Padding="10" BorderColor="LightGray">
                                    <VerticalStackLayout Spacing="5">
                                        <Label>
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="ID: " FontAttributes="Bold"/>
                                                    <Span Text="{Binding Id}"/>
                                                    <Span Text=" - "/>
                                                    <Span Text="{Binding Name}" FontAttributes="Bold"/>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                        <Label>
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="{Binding Gender}"/>
                                                    <Span Text=" | "/>
                                                    <Span Text="{Binding Height}"/>
                                                    <Span Text=" cm | "/>
                                                    <Span Text="{Binding Weight}"/>
                                                    <Span Text=" kg | Osztály: "/>
                                                    <Span Text="{Binding ClassNumber}"/>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <Frame BorderColor="Gray" Padding="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Riportok" FontSize="18" FontAttributes="Bold"/>
                    
                    <Button Text="Osztályátlagok" Clicked="OnShowClassAveragesClicked"/>
                    <Button Text="Legmagasabb lány" Clicked="OnShowTallestGirlClicked"/>
                    <Button Text="Legsúlyosabb fiú" Clicked="OnShowHeaviestBoyClicked"/>
                    
                    <Label x:Name="ReportLabel" 
                           LineBreakMode="WordWrap"
                           MinimumHeightRequest="100"/>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
